{
"@context": [
"https://www.w3.org/2018/credentials/v1",
"https://holashchand.github.io/test_project/insurance-context.json",
   {
      "LifeInsuranceCredential": {
        "@id": "InsuranceCredential"
      },
      "HealthInsuranceCredential": {
        "@id": "InsuranceCredential"
      }
    }
],
"type": [
"VerifiableCredential",
"LifeInsuranceCredential",
"InsuranceCredential"
],
"issuer": "${issuerId}",
"expirationDate": "${date.format($ISO8601DateTimeWithMillisUTC, $calenderNow, $defaultLocale)}",
"credentialSubject": {
"dob": "${dob}",
"gender": "${gender}",
"mobile": "${mobile}",
"benefits": #if($benefits)$benefits#else#set($benefits = '"[]"') $benefits#end,
"fullName": "${fullName}",
"email": "${email}",
"policyIssuedOn": $formattedPolicyIssuedOnDate,
"policyExpiresOn": $formattedPolicyExpiresOnDate,
"policyName": "${policyName}",
"policyNumber": "${policyNumber}"
}
}
